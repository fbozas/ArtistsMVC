@model IEnumerable<ArtistsMVC.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/artists/edit/@item.ID">@item.FullName</a>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            <button class="btn-link js-delete" data-artist-id="@item.ID">Delete</button>
        </td>
    </tr>
}

</table>


@section scripts{
    
    <script>
        $(document).ready(function () {

            $(".js-delete").click(function () {
                var button = $(this);
                console.log(button);

                bootbox.confirm("Are you sure to delete this artist?", function (result) {
                   
                    if (result) {
                        $.ajax({
                            url: "/api/artists/" + button.attr("data-artist-id"),
                            method: "DELETE"
                        }).done(function (response) {
                            console.log(response);
                            button.parents("tr").fadeOut();
                        }).fail(function (error) {
                            console.log(error);
                        });
                    }
                    
                });
            });
        });
    </script>
    
}